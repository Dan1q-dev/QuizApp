{
    "name": "quiz-app",
    "version": "1.0.0",
    "description": "Desktop Quiz Application",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder --win portable",
        "electron:preview": "vite build && electron ."
    },
    "dependencies": {
        "@capacitor/android": "^8.0.0",
        "@capacitor/cli": "^8.0.0",
        "@capacitor/core": "^8.0.0",
        "canvas-confetti": "^1.9.4",
        "framer-motion": "^11.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@capacitor/assets": "^3.0.5",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "png2icons": "^2.0.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.0",
        "vite": "^5.0.10",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.quiz.app",
        "productName": "Quiz App",
        "copyright": "Copyright Â© 2025",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "build/**/*"
        ],
        "win": {
            "target": [
                "portable",
                "nsis"
            ],
            "icon": "build/icon.png"
        },
        "portable": {
            "artifactName": "QuizApp.exe"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Quiz App",
            "license": "build/license.txt",
            "artifactName": "QuizApp-Setup-${version}.exe"
        }
    }
}